<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_padding">

        <ImageView
            android:id="@+id/comic_detail_image_1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/comic_detail_image_separator"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@null" />

        <ImageView
            android:id="@+id/comic_detail_image_2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/comic_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/comicTitle" />

    <TextView
        android:id="@+id/comic_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_font_size"
        style="@style/bottomMargin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comic_detail_upc_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/upcCode"/>

        <TextView
            android:id="@+id/comic_detail_pages"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/pages"/>

    </LinearLayout>

</LinearLayout>